---
import Layout from "./Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  description?: string;
  pubDate: Date;
  image?: {
    url: string;
    alt?: string;
  };
}

const { title, description, pubDate, image } = Astro.props;
