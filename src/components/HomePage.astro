---
import Header from "./Header.astro";
import Hero from "./Hero.astro";
import Footer from "./Footer.astro";
import Carousel from "./Carousel.astro";
// Data for features
const features = [
  {
    icon: "school",
    title: "Learning",
    desc: "Access to IEEE Xplore, magazines, and technical journals.",
  },
  {
    icon: "groups",
    title: "Networking",
    desc: "Connect with professionals and peers globally.",
  },
  {
    icon: "emoji_events",
    title: "Recognition",
    desc: "Awards, scholarships, and competitions.",
  },
];
---

<!--
 * Website for IEEE SB CETKR
 * Copyright (C) 2025 IEEE Student Branch CETKR
 -->
<Header />

<main class="relative overflow-hidden bg-slate-950">
  <Hero />

  <!-- Feature Strip -->
  <section class="relative z-20 -mt-20 pb-20">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-3 gap-6">
        {
          features.map((item, index) => (
            <div
              class="bg-slate-900/80 backdrop-blur-md p-8 rounded-2xl border border-white/5 shadow-xl hover:bg-slate-800 transition-colors duration-300"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <div class="w-12 h-12 bg-gradient-to-br from-cyan-500 to-blue-600 rounded-xl flex items-center justify-center mb-4 shadow-lg shadow-cyan-500/20">
                <span class="material-icons text-white">{item.icon}</span>
              </div>
              <h3 class="text-xl font-bold text-white mb-2">{item.title}</h3>
              <p class="text-slate-400 text-sm leading-relaxed">{item.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="relative py-24 overflow-hidden">
    <!-- Background Decor -->
    <div
      class="absolute top-1/2 left-0 w-full h-[500px] -translate-y-1/2 bg-gradient-to-r from-blue-900/10 to-purple-900/10 -skew-y-3 z-0"
    >
    </div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="order-2 lg:order-1" data-aos="fade-right">
          <div class="relative">
            <div
              class="absolute -inset-4 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-2xl opacity-20 blur-xl"
            >
            </div>
            <div
              class="relative bg-slate-900/50 backdrop-blur-xl p-2 rounded-2xl border border-white/10"
            >
              <Carousel />
            </div>
          </div>
        </div>

        <div class="space-y-8 order-1 lg:order-2" data-aos="fade-left">
          <div>
            <h2
              class="text-sm font-bold text-cyan-400 tracking-widest uppercase mb-2"
            >
              Who We Are
            </h2>
            <h3 class="text-4xl md:text-5xl font-bold text-white mb-6">
              Empowering Future <span class="gradient-text">Innovators</span>
            </h3>
            <div class="h-1 w-20 bg-cyan-500 rounded-full"></div>
          </div>

          <p class="text-slate-300 leading-relaxed text-lg">
            The IEEE Student Branch at College of Engineering Trikarpur is a
            dynamic community of students passionate about technology,
            innovation, and professional development. We provide a platform for
            students to enhance their technical skills, network with industry
            professionals, and work on cutting-edge projects.
          </p>

          <ul class="space-y-4">
            {
              [
                "Workshops & Seminars",
                "Technical Projects",
                "Industry Visits",
              ].map((item) => (
                <li class="flex items-center text-slate-300">
                  <span class="material-icons text-cyan-400 mr-3 text-sm">
                    check_circle
                  </span>
                  {item}
                </li>
              ))
            }
          </ul>

          <div class="pt-4">
            <a
              href="#contact"
              class="inline-flex items-center text-white font-medium hover:text-cyan-400 transition-colors"
            >
              Get in touch with us
              <span class="material-icons ml-2 text-sm">arrow_forward</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-24 relative overflow-hidden">
    <div class="absolute inset-0 bg-[url('/images/grid.svg')] opacity-[0.02]">
    </div>
    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center mb-16" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-white mb-4">
          Our Impact in Numbers
        </h2>
        <p class="text-slate-400 max-w-2xl mx-auto">
          Growing steadily and creating opportunities for every student.
        </p>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
        {
          [
            { number: "100+", label: "Active Members", icon: "groups" },
            { number: "20+", label: "Annual Events", icon: "event" },
            { number: "05+", label: "Workshops", icon: "handyman" },
            { number: "10+", label: "Projects", icon: "lightbulb" },
          ].map((stat, index) => (
            <div
              class="group relative p-8 bg-slate-800/20 rounded-3xl border border-white/5 hover:bg-slate-800/40 transition-all duration-500 text-center hover:-translate-y-2"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 to-purple-500/5 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500" />

              <div class="mb-4 inline-flex p-3 rounded-full bg-slate-800/50 text-cyan-400 group-hover:text-white group-hover:bg-cyan-500 transition-colors duration-300">
                <span class="material-icons text-2xl">{stat.icon}</span>
              </div>

              <div class="text-4xl font-black text-white mb-2">
                {stat.number}
              </div>
              <div class="text-slate-500 text-sm font-semibold uppercase tracking-wider group-hover:text-slate-300 transition-colors">
                {stat.label}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</main>

<Footer />
