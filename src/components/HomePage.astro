---
import Header from "./Header.astro";
import Hero from "./Hero.astro";
import Footer from "./Footer.astro";
import Carousel from "./Carousel.astro";
// Data for features
const features = [
  {
    icon: "school",
    title: "Learning",
    desc: "Access to IEEE Xplore, magazines, and technical journals.",
  },
  {
    icon: "groups",
    title: "Networking",
    desc: "Connect with professionals and peers globally.",
  },
  {
    icon: "emoji_events",
    title: "Recognition",
    desc: "Awards, scholarships, and competitions.",
  },
];
---

<!--
 * Website for IEEE SB CETKR
 * Copyright (C) 2025 IEEE Student Branch CETKR
 -->
<Header />

<main class="relative overflow-hidden bg-white">
  <Hero />

  <!-- Feature Strip -->
  <section class="relative z-20 -mt-24 pb-24">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-3 gap-6">
        {
          features.map((item, index) => (
            <div
              class="bg-white/70 backdrop-blur-xl p-8 rounded-2xl border border-white/50 shadow-[0_8px_30px_rgb(0,0,0,0.04)] hover:shadow-[0_8px_30px_rgb(0,0,0,0.08)] hover:-translate-y-1 transition-all duration-500 group"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <div class="w-12 h-12 bg-blue-50 rounded-xl border border-blue-100 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-500">
                <span class="material-icons text-blue-600">{item.icon}</span>
              </div>
              <h3 class="text-xl font-bold text-zinc-900 mb-3">{item.title}</h3>
              <p class="text-zinc-500 text-sm leading-relaxed">{item.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="relative py-32 overflow-hidden bg-zinc-50/50">
    <!-- Background Decor -->
    <div
      class="absolute top-1/2 left-0 w-full h-[500px] -translate-y-1/2 bg-gradient-to-r from-blue-100/40 to-indigo-100/40 -skew-y-3 z-0 blur-3xl opacity-50"
    >
    </div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="grid lg:grid-cols-2 gap-20 items-center">
        <div class="order-2 lg:order-1" data-aos="fade-right">
          <div class="relative group">
            <div
              class="absolute -inset-2 bg-gradient-to-r from-blue-200/50 to-indigo-200/50 rounded-3xl opacity-0 group-hover:opacity-100 blur-2xl transition-opacity duration-700"
            >
            </div>
            <div
              class="relative bg-white/60 backdrop-blur-xl p-2 rounded-3xl border border-white/60 shadow-xl shadow-zinc-200/50"
            >
              <Carousel />
            </div>
          </div>
        </div>

        <div class="space-y-8 order-1 lg:order-2" data-aos="fade-left">
          <div>
            <h2
              class="text-xs font-bold text-blue-600 tracking-[0.2em] uppercase mb-4"
            >
              Who We Are
            </h2>
            <h3
              class="text-4xl md:text-5xl font-bold text-zinc-900 mb-6 tracking-tight"
            >
              Empowering Future <span
                class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600"
                >Innovators</span
              >
            </h3>
            <div class="h-1 w-20 bg-blue-600 rounded-full"></div>
          </div>

          <p class="text-zinc-600 leading-relaxed text-lg font-normal">
            The IEEE Student Branch at College of Engineering Trikarpur is a
            dynamic community of students passionate about technology,
            innovation, and professional development. We provide a platform for
            students to enhance their technical skills, network with industry
            professionals, and work on cutting-edge projects.
          </p>

          <ul class="space-y-4">
            {
              [
                "Workshops & Seminars",
                "Technical Projects",
                "Industry Visits",
              ].map((item) => (
                <li class="flex items-center text-zinc-700 font-medium">
                  <span class="material-icons text-blue-600 mr-4 text-sm bg-blue-50 p-1 rounded-full">
                    check
                  </span>
                  {item}
                </li>
              ))
            }
          </ul>

          <div class="pt-6">
            <a
              href="#contact"
              class="inline-flex items-center text-zinc-900 text-sm font-bold hover:text-blue-600 transition-colors group"
            >
              Get in touch with us
              <span
                class="material-icons ml-2 text-sm group-hover:translate-x-1 transition-transform"
                >arrow_forward</span
              >
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-32 relative overflow-hidden bg-white">
    <div
      class="absolute inset-0 bg-[url('/images/grid.svg')] opacity-[0.03] invert"
    >
    </div>
    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center mb-20" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-zinc-900 mb-4 tracking-tight">
          Our Impact in Numbers
        </h2>
        <p class="text-zinc-500 max-w-2xl mx-auto">
          Growing steadily and creating opportunities for every student.
        </p>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
        {
          [
            { number: "100+", label: "Active Members", icon: "groups" },
            { number: "20+", label: "Annual Events", icon: "event" },
            { number: "05+", label: "Workshops", icon: "handyman" },
            { number: "10+", label: "Projects", icon: "lightbulb" },
          ].map((stat, index) => (
            <div
              class="group relative p-8 bg-zinc-50 rounded-2xl border border-zinc-100 hover:bg-white hover:shadow-xl hover:shadow-zinc-200/50 transition-all duration-500 text-center"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <div class="mb-6 inline-flex p-4 rounded-2xl bg-white text-zinc-400 group-hover:text-blue-600 group-hover:bg-blue-50 shadow-sm transition-all duration-300">
                <span class="material-icons text-2xl">{stat.icon}</span>
              </div>

              <div class="text-4xl font-extrabold text-zinc-900 mb-2 tracking-tight">
                {stat.number}
              </div>
              <div class="text-zinc-400 text-xs font-semibold uppercase tracking-widest group-hover:text-zinc-500 transition-colors">
                {stat.label}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</main>

<Footer />
