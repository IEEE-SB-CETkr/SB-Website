---
import "../styles/components/hero.css";
---

<!--
 * Website for IEEE SB CETKR
 * Copyright (C) 2025 IEEE Student Branch CETKR
 -->
<section
  class="relative min-h-screen flex items-center justify-center px-4 overflow-hidden bg-slate-900"
>
  <!-- Dynamic Background -->
  <div class="absolute inset-0 z-0">
    <div
      class="absolute top-0 -left-1/4 w-[800px] h-[800px] bg-indigo-600/20 rounded-full blur-[120px] animate-pulse"
    >
    </div>
    <div
      class="absolute bottom-0 -right-1/4 w-[600px] h-[600px] bg-cyan-500/10 rounded-full blur-[100px] animate-pulse delay-700"
    >
    </div>
    <div class="absolute inset-0 bg-[url('/images/grid.svg')] opacity-[0.03]">
    </div>
  </div>

  <div class="container mx-auto text-center relative z-10 max-w-6xl px-6">
    <!-- Badge -->
    <div class="mb-8" data-aos="fade-down" data-aos-duration="1000">
      <span
        class="inline-flex items-center px-3 py-1 rounded-full border border-cyan-500/30 bg-cyan-950/30 text-cyan-300 text-xs font-bold tracking-widest uppercase backdrop-blur-md"
      >
        <span class="w-2 h-2 rounded-full bg-cyan-400 mr-2 animate-ping"></span>
        IEEE SB CETKR
      </span>
    </div>

    <!-- Main Heading -->
    <h1
      class="text-6xl md:text-8xl lg:text-9xl font-black mb-8 leading-none tracking-tighter text-transparent bg-clip-text bg-gradient-to-b from-white to-slate-500/50 drop-shadow-2xl"
      data-aos="fade-up"
      data-aos-duration="1000"
      data-aos-delay="100"
    >
      INNOVATE<br />
      <span class="text-stroke-white text-transparent opacity-80">INSPIRE</span
      ><br />
      <span class="gradient-text">IGNITE</span>
    </h1>

    <p
      class="text-lg md:text-2xl text-slate-300 mb-12 max-w-3xl mx-auto leading-relaxed font-light"
      data-aos="fade-up"
      data-aos-duration="1000"
      data-aos-delay="300"
    >
      Join a global community of innovators at the College of Engineering
      Trikarpur.
      <span class="text-cyan-400 font-medium">Shape the future</span> of technology
      with us.
    </p>

    <!-- Buttons -->
    <div
      class="flex flex-col sm:flex-row justify-center items-center gap-6"
      data-aos="fade-up"
      data-aos-duration="1000"
      data-aos-delay="500"
    >
      <a
        href="https://www.ieee.org/membership/join"
        class="group relative px-8 py-4 bg-blue-600 text-white font-bold rounded-full overflow-hidden shadow-lg shadow-blue-600/30 hover:shadow-blue-600/50 transition-all duration-300 hover:-translate-y-1"
      >
        <span class="relative z-10 flex items-center">
          BECOME A MEMBER
          <span
            class="material-icons ml-2 text-lg group-hover:translate-x-1 transition-transform"
            >arrow_forward</span
          >
        </span>
        <div
          class="absolute inset-0 bg-gradient-to-r from-blue-500 to-indigo-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
        </div>
      </a>

      <a
        href="/events"
        class="group px-8 py-4 bg-slate-800/50 text-white font-medium rounded-full border border-white/10 backdrop-blur-sm hover:bg-slate-700/50 transition-all duration-300"
      >
        SEE OUR WORKS
      </a>
    </div>
  </div>
</section>

<style>
  .text-stroke-white {
    -webkit-text-stroke: 4px rgba(255, 255, 255, 0.3);
  }
</style>
