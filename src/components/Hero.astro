---
import "../styles/components/hero.css";
---

<!--
 * Website for IEEE SB CETKR
 * Copyright (C) 2025 IEEE Student Branch CETKR
 -->
<section
  class="relative min-h-screen flex items-center justify-center px-4 overflow-hidden bg-white"
>
  <!-- Dynamic Background (Aurora) -->
  <div class="absolute inset-0 z-0 pointer-events-none overflow-hidden">
    <div
      class="absolute top-[-10%] left-[-10%] w-[800px] h-[800px] bg-blue-100/50 rounded-full blur-[120px] mix-blend-multiply"
    >
    </div>
    <div
      class="absolute bottom-[-10%] right-[-10%] w-[600px] h-[600px] bg-indigo-100/50 rounded-full blur-[100px] mix-blend-multiply delay-700"
    >
    </div>
    <div
      class="absolute top-[40%] left-[60%] w-[400px] h-[400px] bg-cyan-100/50 rounded-full blur-[80px] mix-blend-multiply"
    >
    </div>
    <div
      class="absolute inset-0 bg-[url('/images/grid.svg')] opacity-[0.03] invert"
    >
    </div>
  </div>

  <div class="container mx-auto text-center relative z-10 max-w-6xl px-6">
    <!-- Badge -->
    <div class="mb-10" data-aos="fade-down" data-aos-duration="1000">
      <span
        class="inline-flex items-center px-4 py-1.5 rounded-full border border-blue-100 bg-white/50 text-blue-600 text-[11px] font-bold tracking-[0.2em] uppercase backdrop-blur-sm shadow-sm"
      >
        <span class="w-1.5 h-1.5 rounded-full bg-blue-500 mr-3 animate-pulse"
        ></span>
        IEEE SB CETKR
      </span>
    </div>

    <!-- Main Heading -->
    <h1
      class="text-6xl md:text-8xl lg:text-9xl font-bold mb-8 leading-[0.9] tracking-tight text-zinc-900 drop-shadow-sm"
      data-aos="fade-up"
      data-aos-duration="1000"
      data-aos-delay="100"
    >
      INNOVATE<br />
      <span class="text-zinc-300">INSPIRE</span><br />
      <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600"
        >IGNITE</span
      >
    </h1>

    <p
      class="text-lg md:text-xl text-zinc-500 mb-12 max-w-2xl mx-auto leading-relaxed font-normal"
      data-aos="fade-up"
      data-aos-duration="1000"
      data-aos-delay="300"
    >
      Join a global community of innovators at the College of Engineering
      Trikarpur. <span class="text-zinc-900 font-semibold"
        >Shape the future</span
      > of technology with us.
    </p>

    <!-- Buttons -->
    <div
      class="flex flex-col sm:flex-row justify-center items-center gap-4"
      data-aos="fade-up"
      data-aos-duration="1000"
      data-aos-delay="500"
    >
      <a
        href="https://www.ieee.org/membership/join"
        class="group relative px-8 py-4 bg-zinc-900 text-white text-sm font-semibold rounded-full overflow-hidden shadow-xl shadow-zinc-900/20 hover:shadow-2xl hover:shadow-zinc-900/30 transition-all duration-300 hover:-translate-y-1"
      >
        <span class="relative z-10 flex items-center">
          BECOME A MEMBER
          <span
            class="material-icons ml-2 text-lg group-hover:translate-x-1 transition-transform"
            >arrow_forward</span
          >
        </span>
      </a>

      <a
        href="/events"
        class="group px-8 py-4 bg-white text-zinc-900 text-sm font-semibold rounded-full border border-zinc-200 shadow-sm hover:shadow-md hover:border-zinc-300 transition-all duration-300"
      >
        SEE OUR WORKS
      </a>
    </div>
  </div>
</section>

<style>
  /* Clean styles, no text-stroke needed for light mode elegance */
</style>
