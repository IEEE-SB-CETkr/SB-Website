    url,
    icon: ICONS[platform as keyof typeof ICONS],
  }));
---

<div class="group relative h-full">
  <div
    class="relative h-full bg-white rounded-3xl p-6 border border-zinc-100 shadow-sm transition-all duration-500 hover:shadow-[0_20px_40px_-15px_rgba(0,0,0,0.1)] hover:-translate-y-2 overflow-hidden"
  >
    <!-- Top Gradient Line -->
    <div
      class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-blue-500 via-indigo-500 to-purple-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"
    >
    </div>

    <div class="relative z-10 flex flex-col items-center text-center h-full">
      <!-- Avatar Section -->
      <div class="relative mb-6">
        <div
          class="w-36 h-36 rounded-2xl bg-zinc-50 p-1.5 shadow-inner group-hover:shadow-blue-200/50 transition-all duration-500"
        >
          <div
            class="w-full h-full rounded-xl overflow-hidden bg-white relative"
          >
            <!-- Placeholder/Skeleton bg -->
            <div class="absolute inset-0 bg-zinc-100 animate-pulse"></div>
            <Image
              src={imageUrl}
              alt={member.name}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 relative z-10"
              width={144}
              height={144}
              decoding="async"
            />
          </div>
        </div>

        <!-- Role Badge -->
        {
          member.role && (
            <div class="absolute -bottom-3 left-1/2 -translate-x-1/2">
              <span class="bg-white/90 backdrop-blur-sm border border-zinc-200 text-zinc-900 text-xs font-bold px-3 py-1 rounded-lg shadow-sm whitespace-nowrap group-hover:border-blue-200 group-hover:text-blue-600 transition-colors duration-300">
                {member.role}
              </span>
            </div>
          )
        }
      </div>

      <!-- Content -->
      <div class="mt-4 w-full flex-grow">
        <h3
          class="text-xl font-bold text-zinc-900 mb-1 group-hover:text-blue-600 transition-colors tracking-tight"
        >
          {member.name}
        </h3>
        <p class="text-zinc-500 text-sm font-medium">{member.department}</p>

        {/* Animated Divider */}
        <div
          class="w-8 h-0.5 bg-zinc-200 mx-auto my-4 group-hover:w-16 group-hover:bg-blue-200 transition-all duration-500"
        >
        </div>

        {
          member.year && (
            <p class="text-zinc-400 text-xs uppercase tracking-wider font-semibold">
              {yearText}
            </p>
          )
        }
      </div>

      <!-- Social Links (Slide Up Reveal) -->
      {
        socialLinks.length > 0 && (
          <div class="mt-6 flex justify-center gap-3 opacity-60 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 transition-all duration-500 delay-100">
            {socialLinks.map(({ platform, url, icon }) => (
              <a
                href={url}
                target="_blank"
                rel="noopener noreferrer"
                class="w-9 h-9 flex items-center justify-center rounded-xl bg-zinc-50 text-zinc-400 hover:bg-blue-600 hover:text-white transition-all duration-300 hover:shadow-lg hover:shadow-blue-600/30 hover:-translate-y-1"
                aria-label={`${member.name}'s ${platform}`}
              >
                <svg
                  class="w-4 h-4"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  {platform === "github" ? (
                    <path fill-rule="evenodd" clip-rule="evenodd" d={icon} />
                  ) : (
                    <path d={icon} />
                  )}
                </svg>
              </a>
            ))}
          </div>
        )
      }
    </div>
  </div>
</div>
