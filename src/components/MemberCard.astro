---
import type { ExecomMember } from '../data/execom';
import { Image } from 'astro:assets';


interface Props {
  member: ExecomMember;
}
const { member } = Astro.props;
// `member.image` is resolved at build time in `src/data/execom.ts` to a URL when available.
const imageUrl = member.image;
---

<div class="bg-slate-800/50 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-slate-700/50 hover:border-cyan-500/30 hover:bg-slate-800/70 group">
  <div class="flex flex-col items-center text-center">
    <!-- Member Image -->
    <div class="relative mb-4 group-hover:scale-105 transition-transform duration-300">
      <div class="w-32 h-32 rounded-full overflow-hidden border-2 border-cyan-500/30 group-hover:border-cyan-500/70 transition-colors duration-300">
        <Image
          src={imageUrl}
          alt={member.name}
          class="w-full h-full object-cover"
          width={128}
          height={128}
        />
      </div>
      
      <!-- Role Badge -->
      {member.role && (
        <span class="absolute -bottom-2 left-1/2 -translate-x-1/2 bg-cyan-600/90 text-white text-sm font-medium px-3 py-1 rounded-full whitespace-nowrap">
          {member.role}
        </span>
      )}
    </div>
    
    <!-- Member Info -->
    <h3 class="text-xl font-bold text-white mb-1">{member.name}</h3>
    <p class="text-cyan-400 text-xs font-medium mb-2">{member.department}</p>
    
    {member.year && (
      // If the year is exactly "faculty" (case-insensitive) display only that word,
      // otherwise show the "Batch of {year}" text.
      (String(member.year).toLowerCase() === 'faculty') ? (
        <p class="text-slate-400 text-xs mb-4">Faculty</p>
      ) : (
        <p class="text-slate-400 text-xs mb-4">Batch of {member.year}</p>
      )
    )}
    
    <!-- Social Links -->
    {member.social && Object.keys(member.social).length > 0 && (
      <div class="flex space-x-3 mt-2">
        {member.social.linkedin && (
          <a 
            href={member.social.linkedin} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-slate-400 hover:text-cyan-400 transition-colors"
            aria-label={`${member.name}'s LinkedIn`}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        )}
        {member.social.github && (
          <a 
            href={member.social.github} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-slate-400 hover:text-cyan-400 transition-colors"
            aria-label={`${member.name}'s GitHub`}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
            </svg>
          </a>
        )}
        {member.social.twitter && (
          <a 
            href={member.social.twitter} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-slate-400 hover:text-cyan-400 transition-colors"
            aria-label={`${member.name}'s Twitter`}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        )}
        {member.social.instagram && (
          <a 
            href={member.social.instagram} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-slate-400 hover:text-cyan-400 transition-colors"
            aria-label={`${member.name}'s Instagram`}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd"/>
            </svg>
          </a>
        )}
      </div>
    )}
  </div>
</div>
