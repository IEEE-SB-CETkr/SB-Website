  .filter(([platform]) => platform in ICONS)
  .map(([platform, url]) => ({
    platform,
    url,
    icon: ICONS[platform as keyof typeof ICONS],
  }));
---

<div class="group relative h-full">
  <div
    class="absolute inset-0 bg-gradient-to-br from-cyan-500/10 to-blue-600/10 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 group-focus-within:opacity-100 transition-opacity duration-500 pointer-events-none"
  >
  </div>

  <div
    class="relative h-full bg-slate-900/40 backdrop-blur-sm rounded-2xl p-8 border border-slate-800 hover:border-cyan-500/30 transition-all duration-300 hover:shadow-lg hover:shadow-cyan-500/10 flex flex-col items-center text-center transform hover:-translate-y-1"
  >
    <div class="relative mb-6">
      <div
        class="w-32 h-32 rounded-full p-1 bg-gradient-to-br from-cyan-500/30 to-blue-600/30 group-hover:from-cyan-400 group-hover:to-blue-500 transition-all duration-300"
      >
        <div
          class="w-full h-full rounded-full overflow-hidden border-4 border-slate-900 bg-slate-900"
        >
          <Image
            src={imageUrl}
            alt={member.name}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            width={128}
            height={128}
            decoding="async"
          />
        </div>
      </div>

      {
        member.role && (
          <span class="absolute -bottom-3 left-1/2 -translate-x-1/2 bg-slate-900 border border-slate-700 text-cyan-400 text-xs font-bold px-4 py-1.5 rounded-full whitespace-nowrap shadow-lg group-hover:border-cyan-500/50 group-hover:shadow-cyan-500/20 transition-all duration-300">
            {member.role}
          </span>
        )
      }
    </div>

    <div class="mt-4 w-full">
      <h3
        class="text-xl font-bold text-white mb-2 group-hover:text-cyan-400 transition-colors"
      >
        {member.name}
      </h3>
      <p class="text-slate-400 text-sm font-medium mb-1">{member.department}</p>
      {member.year && <p class="text-slate-500 text-xs mb-4">{yearText}</p>}
    </div>

    {
      socialLinks.length > 0 && (
        <div class="flex space-x-4 mt-auto pt-4 border-t border-slate-800 w-full justify-center">
          {socialLinks.map(({ platform, url, icon }) => (
            <a
              href={url}
              target="_blank"
              rel="noopener noreferrer"
              class="w-8 h-8 flex items-center justify-center rounded-full bg-slate-800 text-slate-400 hover:bg-cyan-500/10 hover:text-cyan-400 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-cyan-500"
              aria-label={`${member.name}'s ${platform}`}
            >
              <svg
                class="w-4 h-4"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                {platform === "github" ? (
                  <path fill-rule="evenodd" clip-rule="evenodd" d={icon} />
                ) : (
                  <path d={icon} />
                )}
              </svg>
            </a>
          ))}
        </div>
      )
    }
  </div>
</div>
