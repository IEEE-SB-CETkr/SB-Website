---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Chapters data
const chapters = [
  {
    id: 'pes',
    title: 'Power & Energy Society',
    shortTitle: 'PESCO',
    description: 'Advancing the theory and practice of electrical and electronic engineering in power systems.',
    vision: 'To be the leading provider of scientific and engineering information on electric power and energy for the betterment of society.',
    mission: "To provide the world's technical leaders in the electric power industry with the necessary knowledge and tools to ensure a reliable, sustainable, and economic supply of electricity.",
    values: ['Excellence', 'Integrity', 'Professionalism', 'Diversity', 'Innovation'],
    bgColor: 'bg-yellow-500/10',
    color: 'text-yellow-400',
    stats: { members: 85, events: 12, year: 2015 },
    highlights: ['Annual Power Symposium', 'Industrial Visits', 'Renewable Energy Workshops'],
    chair: 'John Smith',
    viceChair: 'Sarah Johnson'
  },
  {
    id: 'wie',
    title: 'Women in Engineering',
    shortTitle: 'WIE',
    description: 'Dedicated to promoting women engineers and inspiring girls to pursue engineering careers.',
    vision: 'A vibrant community of IEEE women and men collectively using their diverse talents to innovate for the benefit of humanity.',
    mission: 'To inspire, engage, encourage, and empower women in technical disciplines around the world.',
    values: ['Inclusivity', 'Empowerment', 'Mentorship', 'Leadership', 'Community'],
    bgColor: 'bg-pink-500/10',
    color: 'text-pink-400',
    stats: { members: 120, events: 15, year: 2016 },
    highlights: ['Women in Tech Conference', 'Mentorship Programs', 'Coding Workshops'],
    chair: 'Emily Chen',
    viceChair: 'Priya Patel'
  },
  {
    id: 'ias',
    title: 'Industry Applications Society',
    shortTitle: 'IAS',
    description: 'Focused on the advancement of electrical and electronic engineering in industry applications.',
    vision: 'To be the leading provider of scientific and engineering information on industrial technology for the betterment of society.',
    mission: 'To serve the needs of industry professionals by providing technical and educational resources to enhance their professional development.',
    values: ['Technical Excellence', 'Professional Growth', 'Industry Collaboration', 'Innovation', 'Knowledge Sharing'],
    bgColor: 'bg-blue-500/10',
    color: 'text-blue-400',
    stats: { members: 95, events: 14, year: 2015 },
    highlights: ['Industrial Automation Workshops', 'Technical Seminars', 'Plant Visits'],
    chair: 'Robert Johnson',
    viceChair: 'Lisa Wang'
  }
];

// Page metadata
const title = "Technical Chapters | IEEE SB CETKR";
const description = "Explore our technical chapters and special interest groups at IEEE SB CETKR";
---

<Header />
<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 bg-gradient-to-br from-slate-900 to-slate-800">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute inset-0 bg-[url('/images/grid.svg')] [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"></div>
    </div>
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
          <span class="gradient-text">Technical Chapters</span>
        </h1>
        <div class="w-24 h-1 bg-gradient-to-r from-cyan-400 to-blue-500 mx-auto rounded-full mb-8"></div>
        <p class="text-lg text-slate-300 mb-8 max-w-2xl mx-auto">
          Join our specialized technical chapters to connect with like-minded individuals, enhance your skills, 
          and stay at the forefront of technological innovation.
        </p>
      </div>
    </div>
  </section>

  <!-- Chapters Grid -->
  <section class="py-16 bg-slate-900">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {chapters.map((chapter) => (
          <div class="group relative overflow-hidden rounded-2xl bg-slate-800/50 hover:bg-slate-800/70 backdrop-blur-sm border border-slate-700/50 hover:border-cyan-500/30 transition-all duration-300 hover:-translate-y-1 shadow-xl hover:shadow-2xl hover:shadow-cyan-500/10 flex flex-col h-full">
            <div class="p-6 flex-1 flex flex-col">
              <div class="flex justify-end mb-6">
                <div class="text-xs font-medium px-3 py-1.5 rounded-full bg-cyan-900/30 text-cyan-400 border border-cyan-500/20">
                  {chapter.stats.members}+ Members
                </div>
              </div>
              
              <h3 class="text-xl font-bold text-white mb-3 group-hover:text-cyan-400 transition-colors">{chapter.title}</h3>
              <p class="text-slate-400 mb-4">{chapter.description}</p>
              
              {/* Vision */}
              <div class="mb-4">
                <h4 class="text-sm font-semibold text-cyan-400 mb-1 flex items-center">
                  <span class="w-1.5 h-1.5 rounded-full bg-cyan-400 mr-2"></span>
                  VISION
                </h4>
                <p class="text-sm text-slate-300">{chapter.vision}</p>
              </div>
              
              {/* Mission */}
              <div class="mb-4">
                <h4 class="text-sm font-semibold text-cyan-400 mb-1 flex items-center">
                  <span class="w-1.5 h-1.5 rounded-full bg-cyan-400 mr-2"></span>
                  MISSION
                </h4>
                <p class="text-sm text-slate-300">{chapter.mission}</p>
              </div>
              
              {/* Values */}
              <div class="mb-4">
                <h4 class="text-sm font-semibold text-cyan-400 mb-2 flex items-center">
                  <span class="w-1.5 h-1.5 rounded-full bg-cyan-400 mr-2"></span>
                  CORE VALUES
                </h4>
                <ul class="grid grid-cols-2 gap-2">
                  {chapter.values.map((value) => (
                    <li class="text-xs text-slate-300 bg-slate-800/50 px-3 py-1.5 rounded">
                      {value}
                    </li>
                  ))}
                </ul>
              </div>
              
              <div class="mt-auto pt-4">
                <div class="grid grid-cols-2 gap-3">
                  <div class="bg-slate-800/50 p-3 rounded-lg">
                    <p class="text-xs text-cyan-400 font-medium mb-1">CHAIR</p>
                    <p class="text-sm text-white font-medium">{chapter.chair}</p>
                  </div>
                  <div class="bg-slate-800/50 p-3 rounded-lg">
                    <p class="text-xs text-cyan-400 font-medium mb-1">VICE CHAIR</p>
                    <p class="text-sm text-white font-medium">{chapter.viceChair}</p>
                  </div>
                  <div class="bg-slate-800/50 p-3 rounded-lg">
                    <p class="text-xs text-cyan-400 font-medium mb-1">ESTABLISHED</p>
                    <p class="text-white font-medium">{chapter.stats.year}</p>
                  </div>
                  <div class="bg-slate-800/50 p-4 rounded-lg">
                    <p class="text-xs text-cyan-400 font-medium mb-1">MEMBERS</p>
                    <p class="text-white font-medium">{chapter.stats.members}+</p>
                  </div>
                </div>
              </div>
              
              <div class="pt-5 mt-5 border-t border-slate-700/50">
                <h4 class="text-sm font-medium text-cyan-400 mb-3">Key Activities:</h4>
                <ul class="space-y-2.5">
                  {chapter.highlights.map((item) => (
                    <li class="flex items-start group/item">
                      <svg class="h-5 w-5 text-cyan-400 mr-3 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="text-sm text-slate-300 group-hover/item:text-white transition-colors">{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Footer -->
  <Footer />
</Layout>

<style>
  .gradient-text {
    background: linear-gradient(90deg, #22d3ee 0%, #3b82f6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }
  
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #0f172a;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #334155;
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #475569;
  }
  
  /* Animation for cards */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fade-in {
    animation: fadeIn 0.5s ease-out forwards;
  }
  
  /* Add staggered animation delay for cards */
  .chapter-card {
    opacity: 0;
    animation: fadeIn 0.5s ease-out forwards;
  }
  
  .chapter-card:nth-child(1) { animation-delay: 0.1s; }
  .chapter-card:nth-child(2) { animation-delay: 0.2s; }
  .chapter-card:nth-child(3) { animation-delay: 0.3s; }
  .chapter-card:nth-child(4) { animation-delay: 0.4s; }
  .chapter-card:nth-child(5) { animation-delay: 0.5s; }
  .chapter-card:nth-child(6) { animation-delay: 0.6s; }
</style>
