---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/components/pages.css";

// Chapters data
const chapters = [
  {
    id: "pes",
    title: "Power & Energy Society",
    shortTitle: "PES",
    description:
      "Advancing the theory and practice of electrical and electronic engineering in power systems.",
    vision:
      "To be the leading provider of scientific and engineering information on electric power and energy for the betterment of society.",
    mission:
      "To provide the world's technical leaders in the electric power industry with the necessary knowledge and tools to ensure a reliable, sustainable, and economic supply of electricity.",
    values: [
      "Excellence",
      "Integrity",
      "Professionalism",
      "Diversity",
      "Innovation",
    ],
    bgColor: "bg-yellow-500/10",
    color: "text-yellow-400",
    borderColor: "group-hover:border-yellow-500/50",
    shadowColor: "hover:shadow-yellow-500/20",
    badgeBg: "bg-yellow-400/10",
    badgeText: "text-yellow-300",
    iconColor: "text-yellow-400",
    stats: { events: 12 },
    highlights: [
      "Annual Power Symposium",
      "Industrial Visits",
      "Renewable Energy Workshops",
    ],
    chair: "Athulya PN",
    viceChair: "Abdullahi Farhan",
  },
  {
    id: "wie",
    title: "Women in Engineering",
    shortTitle: "WIE",
    description:
      "Dedicated to promoting women engineers and inspiring girls to pursue engineering careers.",
    vision:
      "A vibrant community of IEEE women and men collectively using their diverse talents to innovate for the benefit of humanity.",
    mission:
      "To inspire, engage, encourage, and empower women in technical disciplines around the world.",
    values: [
      "Inclusivity",
      "Empowerment",
      "Mentorship",
      "Leadership",
      "Community",
    ],
    bgColor: "bg-pink-500/10",
    color: "text-pink-400",
    borderColor: "group-hover:border-pink-500/50",
    shadowColor: "hover:shadow-pink-500/20",
    badgeBg: "bg-pink-400/10",
    badgeText: "text-pink-300",
    iconColor: "text-pink-400",
    stats: { events: 15 },
    highlights: [
      "Women in Tech Conference",
      "Mentorship Programs",
      "Coding Workshops",
    ],
    chair: "Anjana. K",
    viceChair: "Adhima Sudheer MV",
  },
  {
    id: "ias",
    title: "Industry Applications Society",
    shortTitle: "IAS",
    description:
      "Focused on the advancement of electrical and electronic engineering in industry applications.",
    vision:
      "To be the leading provider of scientific and engineering information on industrial technology for the betterment of society.",
    mission:
      "To serve the needs of industry professionals by providing technical and educational resources to enhance their professional development.",
    values: [
      "Technical Excellence",
      "Professional Growth",
      "Industry Collaboration",
      "Innovation",
      "Knowledge Sharing",
    ],
    bgColor: "bg-blue-500/10",
    color: "text-blue-400",
    borderColor: "group-hover:border-blue-500/50",
    shadowColor: "hover:shadow-blue-500/20",
    badgeBg: "bg-blue-400/10",
    badgeText: "text-blue-300",
    iconColor: "text-blue-400",
    stats: { events: 14 },
    highlights: [
      "Industrial Automation Workshops",
      "Technical Seminars",
      "Plant Visits",
    ],
    chair: "Asliya S",
    viceChair: "Devanandan P",
  },
];

// Page metadata
const title = "Technical Chapters | IEEE SB CETKR";
const description =
  "Explore our technical chapters and special interest groups at IEEE SB CETKR";
---

<!--
 * Website for IEEE SB CETKR
 * Copyright (C) 2025 IEEE Student Branch CETKR
 -->
<Header />
<Layout title={title} description={description}>
  <!-- Background Elements -->
  <div class="fixed inset-0 z-0 overflow-hidden pointer-events-none">
    <div
      class="absolute top-0 right-[10%] w-[500px] h-[500px] bg-cyan-500/5 rounded-full blur-[100px]"
    >
    </div>
    <div
      class="absolute bottom-0 left-[10%] w-[500px] h-[500px] bg-blue-600/5 rounded-full blur-[100px]"
    >
    </div>
  </div>

  <!-- Hero Section -->
  <section class="relative pt-40 pb-20 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div
        class="absolute inset-0 bg-[url('/images/grid.svg')] opacity-10 [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"
      >
      </div>
    </div>

    <div class="container mx-auto px-6 relative z-10 text-center">
      <div data-aos="fade-down" data-aos-duration="1000">
        <span
          class="inline-block px-4 py-1.5 rounded-full border border-cyan-500/30 bg-cyan-500/10 text-cyan-300 text-sm font-medium mb-6 backdrop-blur-sm"
        >
          Explore Our Communities
        </span>
      </div>

      <h1
        class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight"
        data-aos="fade-up"
        data-aos-duration="1000"
        data-aos-delay="100"
      >
        Technical <span class="gradient-text font-extrabold">Chapters</span>
      </h1>

      <p
        class="text-lg md:text-xl text-slate-300 mb-10 max-w-2xl mx-auto leading-relaxed"
        data-aos="fade-up"
        data-aos-duration="1000"
        data-aos-delay="200"
      >
        Connect with like-minded innovators, enhance your technical skills, and
        drive the future of technology through our specialized societies.
      </p>
    </div>
  </section>

  <!-- Chapters Grid -->
  <section class="pb-32 relative z-10">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          chapters.map((chapter, index) => (
            <div
              class={`group relative flex flex-col h-full bg-slate-900/40 backdrop-blur-xl border border-white/10 rounded-3xl overflow-hidden transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl ${chapter.borderColor ?? "hover:border-cyan-500/30"} ${chapter.shadowColor ?? "hover:shadow-cyan-500/10"}`}
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              {/* Card Header & Title */}
              <div class="p-8 pb-4">
                <div class="flex justify-between items-start mb-6">
                  <div
                    class={`p-3 rounded-2xl ${chapter.bgColor} ${chapter.color}`}
                  >
                    <span class="material-icons text-3xl">layers</span>
                  </div>
                  <span
                    class={`px-3 py-1 rounded-full text-xs font-bold tracking-wide uppercase ${chapter.badgeBg ?? "bg-slate-800"} ${chapter.badgeText ?? "text-slate-300"}`}
                  >
                    {chapter.shortTitle}
                  </span>
                </div>

                <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-white/90 transition-colors">
                  {chapter.title}
                </h3>
                <p class="text-slate-400 text-sm leading-relaxed mb-6">
                  {chapter.description}
                </p>
              </div>

              {/* Vision & Mission Tabs Area */}
              <div class="px-8 py-6 bg-slate-950/30 border-y border-white/5 space-y-4 flex-grow">
                <div>
                  <h4 class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-2 flex items-center">
                    <span class="material-icons text-sm mr-2 opacity-70">
                      visibility
                    </span>
                    Vision
                  </h4>
                  <p class="text-sm text-slate-300 italic">
                    "{chapter.vision}"
                  </p>
                </div>
              </div>

              {/* Values Tags */}
              <div class="px-8 py-4">
                <div class="flex flex-wrap gap-2">
                  {chapter.values.slice(0, 3).map((value) => (
                    <span class="text-[10px] text-slate-400 bg-slate-800/50 border border-white/5 px-2 py-1 rounded-md">
                      # {value}
                    </span>
                  ))}
                  {chapter.values.length > 3 && (
                    <span class="text-[10px] text-slate-500 bg-slate-800/30 border border-white/5 px-2 py-1 rounded-md">
                      +{chapter.values.length - 3} more
                    </span>
                  )}
                </div>
              </div>

              {/* Footer / Stats */}
              <div class="mt-auto px-8 py-5 bg-slate-950/50 border-t border-white/5 flex items-center justify-between group-hover:bg-slate-950/70 transition-colors">
                <div class="flex flex-col">
                  <span class="text-[10px] text-slate-500 font-bold uppercase tracking-wider">
                    Chair
                  </span>
                  <span
                    class={`text-sm font-bold ${chapter.color ?? "text-cyan-400"}`}
                  >
                    {chapter.chair}
                  </span>
                </div>
                <div class="text-right">
                  <span class="block text-[10px] text-slate-500 font-bold uppercase tracking-wider">
                    Vice Chair
                  </span>
                  <span
                    class={`text-sm font-bold ${chapter.color ?? "text-cyan-400"}`}
                  >
                    {chapter.viceChair}
                  </span>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <Footer />
</Layout>
