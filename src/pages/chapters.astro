---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/components/pages.css";

// Chapters data
const chapters = [
  {
    id: "pes",
    title: "Power & Energy Society",
    shortTitle: "PES",
    description:
      "Advancing the theory and practice of electrical and electronic engineering in power systems.",
    vision:
      "To be the leading provider of scientific and engineering information on electric power and energy for the betterment of society.",
    mission:
      "To provide the world's technical leaders in the electric power industry with the necessary knowledge and tools to ensure a reliable, sustainable, and economic supply of electricity.",
    values: [
      "Excellence",
      "Integrity",
      "Professionalism",
      "Diversity",
      "Innovation",
    ],
    bgColor: "bg-yellow-50",
    color: "text-yellow-700",
    borderColor: "hover:border-yellow-300",
    shadowColor: "hover:shadow-yellow-500/10",
    badgeBg: "bg-yellow-100",
    badgeText: "text-yellow-800",
    iconColor: "text-yellow-600",
    stats: { events: 12, year: 2015 },
    chair: "Athulya PN",
    viceChair: "Abdullahi Farhan",
  },
  {
    id: "wie",
    title: "Women in Engineering",
    shortTitle: "WIE",
    description:
      "Dedicated to promoting women engineers and inspiring girls to pursue engineering careers.",
    vision:
      "A vibrant community of IEEE women and men collectively using their diverse talents to innovate for the benefit of humanity.",
    mission:
      "To inspire, engage, encourage, and empower women in technical disciplines around the world.",
    values: [
      "Inclusivity",
      "Empowerment",
      "Mentorship",
      "Leadership",
      "Community",
    ],
    bgColor: "bg-pink-50",
    color: "text-pink-700",
    borderColor: "hover:border-pink-300",
    shadowColor: "hover:shadow-pink-500/10",
    badgeBg: "bg-pink-100",
    badgeText: "text-pink-800",
    iconColor: "text-pink-600",
    stats: { events: 15, year: 2016 },
    chair: "Anjana. K",
    viceChair: "Adhima Sudheer MV",
  },
  {
    id: "ias",
    title: "Industry Applications Society",
    shortTitle: "IAS",
    description:
      "Focused on the advancement of electrical and electronic engineering in industry applications.",
    vision:
      "To be the leading provider of scientific and engineering information on industrial technology for the betterment of society.",
    mission:
      "To serve the needs of industry professionals by providing technical and educational resources to enhance their professional development.",
    values: [
      "Technical Excellence",
      "Professional Growth",
      "Industry Collaboration",
      "Innovation",
      "Knowledge Sharing",
    ],
    bgColor: "bg-blue-50",
    color: "text-blue-700",
    borderColor: "hover:border-blue-300",
    shadowColor: "hover:shadow-blue-500/10",
    badgeBg: "bg-blue-100",
    badgeText: "text-blue-800",
    iconColor: "text-blue-600",
    stats: { events: 14, year: 2015 },
    chair: "Asliya S",
    viceChair: "Devanandan P",
  },
];

// Page metadata
const title = "Technical Chapters | IEEE SB CETKR";
const description =
  "Explore our technical chapters and special interest groups at IEEE SB CETKR";
---

<!--
 * Website for IEEE SB CETKR
 * Copyright (C) 2025 IEEE Student Branch CETKR
 -->
<Header />
<Layout title={title} description={description}>
  <!-- Background Elements -->
  <div class="fixed inset-0 z-0 overflow-hidden pointer-events-none">
    <div
      class="absolute top-0 right-[10%] w-[600px] h-[600px] bg-blue-100/40 rounded-full blur-[120px] mix-blend-multiply"
    >
    </div>
    <div
      class="absolute bottom-0 left-[10%] w-[600px] h-[600px] bg-purple-100/40 rounded-full blur-[120px] mix-blend-multiply"
    >
    </div>
  </div>

  <!-- Hero Section -->
  <section class="relative pt-40 pb-20 overflow-hidden">
    <div class="absolute inset-0 z-0 opacity-40">
      <div
        class="absolute inset-0 bg-[url('/images/grid.svg')] [mask-image:linear-gradient(180deg,black,transparent)]"
      >
      </div>
    </div>

    <div class="container mx-auto px-6 relative z-10 text-center">
      <h1
        class="text-4xl md:text-6xl font-bold text-zinc-900 mb-6 tracking-tight"
        data-aos="fade-up"
        data-aos-duration="800"
        data-aos-delay="100"
      >
        Technical <span
          class="bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-violet-600"
          >Chapters</span
        >
      </h1>

      <p
        class="text-lg md:text-xl text-zinc-500 mb-10 max-w-2xl mx-auto leading-relaxed font-normal"
        data-aos="fade-up"
        data-aos-duration="800"
        data-aos-delay="200"
      >
        Connect with like-minded innovators, enhance your technical skills, and
        drive the future of technology through our specialized societies.
      </p>
    </div>
  </section>

  <!-- Chapters Grid -->
  <section class="pb-32 relative z-10">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          chapters.map((chapter, index) => (
            <div
              class={`group relative flex flex-col h-full bg-white/80 backdrop-blur-xl border border-zinc-200/80 rounded-3xl overflow-hidden transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl shadow-sm ${chapter.borderColor ?? "hover:border-blue-300"} ${chapter.shadowColor ?? "hover:shadow-blue-500/10"}`}
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              {/* Card Header & Title */}
              <div class="p-8 pb-4">
                <div class="flex justify-between items-start mb-6">
                  <div
                    class={`p-3 rounded-2xl ${chapter.bgColor} ${chapter.color} shadow-sm`}
                  >
                    <span class="material-icons text-3xl">layers</span>
                  </div>
                  <span
                    class={`px-3 py-1 rounded-full text-xs font-bold tracking-wide uppercase border border-transparent ${chapter.badgeBg ?? "bg-zinc-100"} ${chapter.badgeText ?? "text-zinc-600"}`}
                  >
                    {chapter.shortTitle}
                  </span>
                </div>

                <h3 class="text-2xl font-bold text-zinc-900 mb-3 group-hover:text-blue-600 transition-colors">
                  {chapter.title}
                </h3>
                <p class="text-zinc-500 text-sm leading-relaxed mb-6">
                  {chapter.description}
                </p>
              </div>

              {/* Vision & Mission Tabs Area */}
              <div class="px-8 py-6 bg-zinc-50/50 border-y border-zinc-100 space-y-4 flex-grow">
                <div>
                  <h4 class="text-xs font-bold text-zinc-400 uppercase tracking-wider mb-2 flex items-center">
                    <span class="material-icons text-sm mr-2 opacity-70">
                      visibility
                    </span>
                    Vision
                  </h4>
                  <p class="text-sm text-zinc-600 italic font-medium">
                    "{chapter.vision}"
                  </p>
                </div>
              </div>

              {/* Values Tags */}
              <div class="px-8 py-4">
                <div class="flex flex-wrap gap-2">
                  {chapter.values.slice(0, 3).map((value) => (
                    <span class="text-[10px] text-zinc-500 bg-white border border-zinc-200 px-2.5 py-1 rounded-md font-semibold shadow-sm">
                      # {value}
                    </span>
                  ))}
                  {chapter.values.length > 3 && (
                    <span class="text-[10px] text-zinc-400 bg-zinc-50 border border-zinc-100 px-2 py-1 rounded-md font-medium">
                      +{chapter.values.length - 3} more
                    </span>
                  )}
                </div>
              </div>

              {/* Footer / Stats */}
              <div class="mt-auto px-8 py-5 bg-white border-t border-zinc-100 flex items-center justify-between group-hover:bg-zinc-50/50 transition-colors">
                <div class="flex flex-col">
                  <span class="text-[10px] text-zinc-400 font-bold uppercase tracking-wider">
                    Chair
                  </span>
                  <span class="text-sm font-semibold text-zinc-700">
                    {chapter.chair}
                  </span>
                </div>
                <div class="text-right">
                  <span class="block text-[10px] text-zinc-400 font-bold uppercase tracking-wider">
                    Est.
                  </span>
                  <span
                    class={`text-sm font-bold ${chapter.color ?? "text-blue-600"}`}
                  >
                    {chapter.stats.year}
                  </span>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <Footer />
</Layout>
