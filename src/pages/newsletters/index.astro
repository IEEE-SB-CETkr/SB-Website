<Header />
<Layout title={pageTitle} description={pageDescription}>
  <!-- Background Elements -->
  <div class="fixed inset-0 z-0 overflow-hidden pointer-events-none">
    <div
      class="absolute top-0 right-[10%] w-[500px] h-[500px] bg-cyan-500/5 rounded-full blur-[100px]"
    >
    </div>
    <div
      class="absolute bottom-0 left-[10%] w-[500px] h-[500px] bg-blue-600/5 rounded-full blur-[100px]"
    >
    </div>
  </div>

  <main class="min-h-screen relative z-10">
    <!-- Hero Section -->
    <!-- Hero Section -->
    <section class="relative pt-40 pb-20 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div
          class="absolute inset-0 bg-[url('/images/grid.svg')] opacity-10 [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"
        >
        </div>
      </div>

      <div class="container mx-auto px-6 relative z-10 text-center">
        <div data-aos="fade-down" data-aos-duration="1000">
          <span
            class="inline-block px-4 py-1.5 rounded-full border border-cyan-500/30 bg-cyan-500/10 text-cyan-300 text-sm font-medium mb-6 backdrop-blur-sm"
          >
            Stay Updated
          </span>
        </div>

        <h1
          class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight"
          data-aos="fade-up"
          data-aos-duration="1000"
          data-aos-delay="100"
        >
          Our <span class="gradient-text font-extrabold">Newsletters</span>
        </h1>

        <p
          class="text-lg md:text-xl text-slate-300 mb-10 max-w-2xl mx-auto leading-relaxed"
          data-aos="fade-up"
          data-aos-duration="1000"
          data-aos-delay="200"
        >
          Stay updated with our latest news, events, and technical insights from
          the IEEE Student Branch at College of Engineering Trikaripur.
        </p>
      </div>
    </section>

    <!-- Newsletters Grid -->
    <section class="py-16 bg-slate-950">
      <div class="container mx-auto px-6 max-w-7xl">
        {
          sortedNewsletters.length > 0 ? (
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
              {sortedNewsletters.map((newsletter) => (
                <article class="group relative bg-slate-900/40 backdrop-blur-sm rounded-2xl overflow-hidden border border-slate-800 hover:border-cyan-500/30 transition-all duration-500 h-full flex flex-col hover:-translate-y-2 hover:shadow-2xl hover:shadow-cyan-900/20">
                  <a
                    href={`/newsletters/${newsletter.slug}/`}
                    class="block h-full flex flex-col"
                  >
                    {newsletter.data.image ? (
                      <div class="h-56 overflow-hidden relative">
                        <div class="absolute inset-0 bg-gradient-to-t from-slate-900 to-transparent opacity-60 z-10" />
                        <img
                          src={newsletter.data.image.url}
                          alt={
                            newsletter.data.image.alt || newsletter.data.title
                          }
                          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                          loading="lazy"
                          width={400}
                          height={225}
                        />
                      </div>
                    ) : (
                      <div class="h-56 bg-slate-800/50 flex items-center justify-center relative overflow-hidden group-hover:bg-slate-800/70 transition-colors">
                        <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 to-blue-500/5" />
                        <span class="text-5xl opacity-20 group-hover:scale-110 transition-transform duration-500">
                          ðŸ“°
                        </span>
                      </div>
                    )}

                    <div class="p-8 flex-1 flex flex-col relative z-20">
                      <div class="flex-1">
                        <time class="inline-block px-3 py-1 mb-4 text-xs font-bold text-cyan-400 bg-cyan-950/30 border border-cyan-500/20 rounded-full">
                          {newsletter.data.pubDate.toLocaleDateString("en-US", {
                            year: "numeric",
                            month: "short",
                            day: "numeric",
                          })}
                        </time>
                        <h2 class="text-2xl font-bold mb-3 text-white group-hover:text-cyan-400 transition-colors leading-tight">
                          {newsletter.data.title}
                        </h2>
                        {newsletter.data.description && (
                          <p class="text-slate-400 line-clamp-3 leading-relaxed mb-6">
                            {newsletter.data.description}
                          </p>
                        )}
                      </div>

                      <div class="pt-6 mt-auto border-t border-slate-800/50 flex items-center justify-between">
                        <span class="inline-flex items-center text-cyan-400 text-sm font-bold group-hover:translate-x-2 transition-transform duration-300">
                          Read Newsletter
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-4 w-4 ml-2"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M17 8l4 4m0 0l-4 4m4-4H3"
                            />
                          </svg>
                        </span>
                      </div>
                    </div>
                  </a>
                </article>
              ))}
            </div>
          ) : (
            <div class="text-center py-24 bg-slate-900/50 rounded-3xl border border-dashed border-slate-800">
              <div class="w-20 h-20 bg-slate-800/50 rounded-full flex items-center justify-center mx-auto mb-6">
                <span class="text-4xl opacity-50">ðŸ“­</span>
              </div>
              <h3 class="text-2xl font-bold text-white mb-2">
                No newsletters yet
              </h3>
              <p class="text-slate-400 max-w-md mx-auto mb-8">
                We're working on some exciting content. Check back soon for
                updates!
              </p>
              <a
                href="/"
                class="inline-flex items-center px-8 py-3 rounded-full bg-cyan-600 hover:bg-cyan-500 text-white font-semibold transition-all shadow-lg hover:shadow-cyan-500/25"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 mr-2"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                  />
                </svg>
                Back to Home
              </a>
            </div>
          )
        }
      </div>
    </section>
  </main>
</Layout>
<Footer />
