---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

const allNewsletters = await getCollection("newsletters");
const sortedNewsletters = allNewsletters.sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);

const pageTitle = "Newsletters | IEEE SB CETKR";
const pageDescription =
  "Stay updated with the latest news and updates from IEEE SB CETKR";
