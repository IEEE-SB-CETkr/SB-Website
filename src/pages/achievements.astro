---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { achievements } from '../data/achievements';
import '../styles/components/pages.css';

const title = 'Our Achievements';
const description = 'Celebrating the accomplishments and milestones of IEEE SB CETKR';
---
<Header />
<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 bg-gradient-to-br from-slate-900 to-slate-800">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute inset-0 bg-[url('/images/grid.svg')] [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"></div>
    </div>
    <div class="container mx-auto px-6 text-center relative z-10">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
        Our <span class="gradient-text bg-clip-text text-transparent">Achievements</span>
      </h1>
      <p class="text-lg md:text-xl text-slate-300 max-w-3xl mx-auto">
        Celebrating excellence and innovation in technology and engineering
      </p>
    </div>
  </section>

  <!-- Achievements Section -->
  <section class="py-16 bg-slate-900">
    <div class="container mx-auto px-6">
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {achievements.map((achievement) => (
          <div class="group relative overflow-hidden rounded-2xl bg-slate-800/50 hover:bg-slate-800/70 backdrop-blur-sm border border-slate-700/50 hover:border-cyan-500/30 transition-all duration-300 hover:-translate-y-1 shadow-xl hover:shadow-2xl hover:shadow-cyan-500/10 flex flex-col">
            {achievement.image && (
              <div class="h-48 overflow-hidden">
                <img 
                  src={achievement.image} 
                  alt={achievement.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              </div>
            )}
            <div class="p-6 flex-1 flex flex-col">
              <div class="flex items-center justify-between mb-3">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-cyan-500/10 text-cyan-400">
                  {achievement.category.charAt(0).toUpperCase() + achievement.category.slice(1)}
                </span>
                <span class="text-sm text-slate-400">
                  {new Date(achievement.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short' })}
                </span>
              </div>
              <h3 class="text-xl font-bold text-white mb-2 group-hover:text-cyan-400 transition-colors">
                {achievement.title}
              </h3>
              <p class="text-slate-300 mb-4 flex-1">
                {achievement.description}
              </p>
              {achievement.teamMembers && (
                <div class="mt-4 pt-4 border-t border-slate-700/50">
                  <h4 class="text-sm font-medium text-slate-400 mb-2">Team Members</h4>
                  <div class="flex flex-wrap gap-2">
                    {achievement.teamMembers.map(member => (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-700/50 text-slate-300">
                        {member}
                      </span>
                    ))}
                  </div>
                </div>
              )}
              {achievement.link && (
                <div class="mt-4 pt-4 border-t border-slate-700/50">
                  <a 
                    href={achievement.link} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center text-sm font-medium text-cyan-400 hover:text-cyan-300 transition-colors group-hover:underline"
                  >
                    View Details
                    <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                    </svg>
                  </a>
                </div>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
<Footer />

---
