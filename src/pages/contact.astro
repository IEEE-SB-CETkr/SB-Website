---
import Layout from '../layouts/Layout.astro';
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import '../styles/components/pages.css';

// Contact Information
const contactInfo = {
  email: 'ieeesbcetkr@gmail.com',
  address: {
    line1: 'College of Engineering Trikarpur',
    line2: 'Kasaragod',
    state: 'Kerala',
    country: 'India',
    pincode: '671531'
  },
  googleMapsUrl: 'https://www.google.com/maps/place/College+of+Engineering+Trikarpur',
  keyContacts: [
    { 
      role: 'Branch Counselor',
      name: 'Dr. Naveena AK',
      email: 'advisor@cet.ac.in',
      phone: '+91 99999 99996'
    },
    { 
      role: 'Chairperson',
      name: 'Heba Hassan',
      email: 'chair@ieeesbcetkr.org',
      phone: '+91 99999 99999'
    },
    { 
      role: 'Vice Chairperson',
      name: 'Aliya TM',
      email: 'vicechair@ieeesbcetkr.org',
      phone: '+91 99999 99998'
    },
    { 
      role: 'Secretary',
      name: 'Akshay Sreedharan',
      email: 'secretary@ieeesbcetkr.org',
      phone: '+91 99999 99997'
    }
  ],
  socials: {
    facebook: 'https://facebook.com/ieeesbcetkr',
    twitter: 'https://x.com/ieeesbcetkr',
    instagram: 'https://instagram.com/ieeesbcetkr',
    linkedin: 'https://linkedin.com/company/ieeesbcetkr'
  }
};

// Page metadata
const title = "Contact Us | IEEE SB CETKR";
const description = "Get in touch with IEEE Student Branch at College of Engineering Trikarpur. We'd love to hear from you!";
---

<Header />
<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 bg-gradient-to-b from-slate-900 to-slate-800">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute inset-0 bg-[url('/images/grid.svg')] [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"></div>
    </div>
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">Get in <span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">Touch</span></h1>
        <p class="text-lg text-slate-300 mb-8 max-w-2xl mx-auto">
          Have questions or want to know more about IEEE SB CETKR? Reach out to us through any of the channels below or send us a message using the contact form.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="py-12 bg-slate-900">
    <div class="container mx-auto px-6">
      <!-- Email and Social Media -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        <div>
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-cyan-500/10 rounded-lg flex items-center justify-center mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-white">Email Us</h2>
          </div>
          <p class="text-slate-400 mb-6">Have questions or feedback? We're here to help! Our team typically responds within 24-48 hours.</p>
          <a href={`mailto:${contactInfo.email}`} class="inline-flex items-center px-6 py-2.5 bg-cyan-600 hover:bg-cyan-700 text-white rounded-lg transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            {contactInfo.email}
          </a>
        </div>
      </div>

      <!-- Location -->
      <div class="mb-12">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-cyan-500/10 rounded-lg flex items-center justify-center mr-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-white">Our Location</h2>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <div class="lg:col-span-2">
              <div class="rounded-lg overflow-hidden border border-slate-700/50 bg-slate-800 h-full">
              <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5031.222861355563!2d75.23167867601698!3d12.24347803042137!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3ba465c310dea69b%3A0xe1985dae01d5292!2sCoE%20Trikaripur!5e1!3m2!1sen!2sin!4v1751959332372!5m2!1sen!2sin&style=feature:all|element:geometry|color:0x1a1a1a&style=feature:all|element:labels.text.fill|color:0x858585&style=feature:all|element:labels.text.stroke|color:0x000000&style=feature:all|element:labels.icon|visibility:off&style=feature:administrative|element:geometry|visibility:simplified&style=feature:administrative.land_parcel|visibility:off&style=feature:administrative.neighborhood|visibility:off&style=feature:landscape|element:geometry|color:0x2c2c2c&style=feature:poi|visibility:off&style=feature:road|element:geometry|color:0x2c2c2c&style=feature:road|element:labels|visibility:off&style=feature:transit|visibility:off&style=feature:water|element:geometry|color:0x000000&style=feature:water|element:labels.text.fill|color:0x3d3d3d" 
                width="100%" 
                height="100%" 
                class="map-embed" 
                allowfullscreen="" 
                loading="lazy" 
                referrerpolicy="no-referrer-when-downgrade"
                title="College of Engineering Trikaripur Location">
              </iframe>
            </div>
          </div>
          
          <div class="lg:pl-4">
            <div class="bg-slate-800/50 p-6 rounded-lg h-full border border-slate-700/50">
              <h3 class="text-lg font-semibold text-white mb-4">College of Engineering Trikaripur</h3>
              <address class="not-italic text-slate-300 space-y-3">
                <div class="flex items-start">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-cyan-400 mt-0.5 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <div>
                    <p>{contactInfo.address.line1}</p>
                    <p>{contactInfo.address.line2}</p>
                    <p>{contactInfo.address.state}, {contactInfo.address.country} - {contactInfo.address.pincode}</p>
                  </div>
                </div>
              </address>
              <div class="mt-6">
                <a href="https://maps.app.goo.gl/vzdU5HfJhyX7hZwo7" target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-4 py-2 bg-slate-800 hover:bg-slate-700 text-white rounded-lg transition-colors border border-slate-700 hover:border-cyan-500/50 text-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  View on Google Maps
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Key Contacts -->
      <div>
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-cyan-500/10 rounded-lg flex items-center justify-center mr-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-white">Key Contacts</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {contactInfo.keyContacts.map(contact => (
            <div class="bg-slate-800/50 hover:bg-slate-800/70 rounded-lg p-5 transition-all duration-300 border border-slate-700/50 hover:border-cyan-500/30 h-full" data-contact-email={contact.email}>
              <div class="flex items-start space-x-3">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 rounded-full bg-cyan-500/10 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <h4 class="text-base font-medium text-white">{contact.name}</h4>
                  <p class="text-sm text-cyan-400 font-medium mb-2">{contact.role}</p>
                  <div class="space-y-2">
                    <div class="flex items-start">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-400 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                      <a href={`mailto:${contact.email}`} class="text-sm text-slate-300 hover:text-cyan-400 transition-colors break-all">
                        {contact.email}
                      </a>
                    </div>
                    <div class="flex items-start">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-400 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                      </svg>
                      <a href={`tel:${contact.phone.replace(/\s+/g, '')}`} class="text-sm text-slate-300 hover:text-cyan-400 transition-colors">
                        {contact.phone}
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
  <Footer />
</Layout>


