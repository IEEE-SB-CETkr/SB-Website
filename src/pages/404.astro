---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="404 - Page Not Found">
  <Header />
  <main
    class="flex flex-col items-center justify-center flex-1 py-24 px-4 text-center"
  >
    <img src="/SB_LOGO_B.png" alt="Logo" class="w-28 mb-8 drop-shadow-lg" />
    <div class="flex flex-col items-center mb-8">
      <span
        class="gradient-text text-[8rem] md:text-[10rem] font-extrabold leading-none mb-2 animate-fade-in"
        style="letter-spacing:-0.05em;">404</span
      >
      <h1
        class="gradient-text text-3xl md:text-5xl font-extrabold tracking-tighter mb-2 animate-fade-in"
      >
        Page Not Found
      </h1>
    </div>
    <p class="text-lg text-slate-600 mb-8">
      Sorry, the page you’re looking for doesn’t exist or has been moved.
    </p>
    <a
      href="/"
      class="btn-primary inline-block text-center transform hover:scale-105 transition-transform duration-300"
      >Go to Homepage</a
    >
  </main>
  <Footer />
</Layout>
